<%= form_for(@article, html: {multipart: true}) do |f| %>
	<ul>
		<% @article.errors.full_messages.each do |error| %>
		  <li> <%= error %> </li>
		<% end %>
	</ul>
	
	<p>	
		<%= f.label :title, "Title" %><br>
		<%= f.text_field :title %>
	</p>
	
	<p>
		<%= f.label :body, "Body" %><br>
		<%= f.text_area :body %>
	</p>
	
	<p>
		<%= f.label :tag_list, "Tag List" %>
		<%= f.text_field :tag_list %>
	</p>	
	
	<p>
		<% if @article.image.exists? %>
			<%= image_tag @article.image.url, style: "border-style: solid; border-width: 2px;" %><br>
		<% end %>
		<%= f.label :image, "Attach an Image" %><br>
		<%= f.file_field :image %>
	</p>
	  
	<p>
		<%= f.submit "Submit" %>
	</p>
	
<% end %>